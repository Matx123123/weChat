/* pages/clear/clear.wxss */
page{height:100%}
.section {
	position: relative;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
    font-family: "Microsoft Yahei";
}

.top{
	position: absolute;
	top:0;
	left: 0;
	width: 100%;
	height: 50px;
	background: grey;
	line-height: 50px;
	color: navajowhite;
	border-bottom-left-radius: 50%;
	border-bottom-right-radius: 50%;
	text-align: center;
	font-size: 20px;
	z-index: 100;
}


.aside {
	position: absolute;
	bottom: 0;
	left: 0;
	display: block;
	width: 100%;
	height: 40px;
	box-sizing: border-box;
	border: 2px solid #000;
}

.aside>input {
	display: block;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	font-size: 15px;
	padding-left: 15px;
	outline: none;
	border: none;
	padding-right: 80px;
}

.aside>button {
	position: absolute;
	right: 0;
	top: 0;
	width: 80px;
	height: 100%;
	font-size: 15px;
	text-align: center;
	background: black;
	color: white;
	outline: none;
	border: none;
    border-radius: 0;
}

.article {
	width: 100%;
	height: 100%;
	padding: 70px 15px 40px 15px;
	box-sizing: border-box;
	overflow: hidden;
}

.send1 {
	position: relative;
	float: right;
	width: auto;
	max-width: 200px;
	line-height: 26px;
	font-size: 16px;
	margin-right: 20px;
	background: #F8C301;
	border-radius: 5px;
	padding: 10px;
}

.send1>.arrow {
	position: absolute;
	top: 10px;
	right: -16px;
	width: 0;
	height: 0;
	font-size: 0;
	border: solid 8px;
	border-color: #f7f7f7 #f7f7f7 #f7f7f7 #F8C301;
}

.send2 {
	position: relative;
	float: left;
	width: auto;
	max-width: 200px;
	font-size: 16px;
	margin-left: 20px;
	background: pink;
	line-height: 26px;
	border-radius: 5px;
	padding: 10px;
}

.send2>.arrow {
	position: absolute;
	top: 10px;
	left: -16px;
	width: 0;
	height: 0;
	font-size: 0;
	border: solid 8px;
	border-color: #f7f7f7 pink #f7f7f7 #f7f7f7;
}

.mychat,
.robotchat {
	margin-bottom: 15px;
}

.mychat>image {
	float: right;
}

.robotchat>image {
	float: left;
}

.simg{
	width: 40px;
    height:40px;
}

.black{
	display: none;
	position: fixed;
	top:0;
	left: 0;
	width: 100%;
	height: 100%;
	background: black;
	z-index: 200;
}

.bimg{
	position: absolute;
	top:100px;
	left: 0;
	width: 100%;
	transition: all .35s;
	z-index: 300;
}
